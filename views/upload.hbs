<div class="upload-page content">

  <h1>Project Upload</h1>

  <form class="box" action="/upload/upload-file-form" enctype="multipart/form-data" method="post" id="theform">
    <p>
      <label class="label" for="title">Title</label>
      <input class="input" id="title" type="text" name="title">
    </p>
    <label class="label" for="subject">Subject</label>
    <div class="select">
      <select id="subject">
        <option>...</option>
        <option value="Biology">Biology</option>
        <option value="History">History</option>
        <option value="CSCI">Computer Science</option>
        <option value="Engineering">Engineering</option>
      </select>
    </div>
    <p>
      <label class="label" for="tags">Tags</label>
      <input class="input" id="tags" type="text" name="tags">
    </p>
    <p>
      <label class="label" for="description">Description</label>
      <input class="input" id="description" type="text" name="description">
    </p>

    <div class="file has-name" id="file-chooser-widget">
      <label class="file-label">
        <input class="file-input" id="theinputfield" type="file" name="thefile">
        <span class="file-cta">
          <span class="file-icon">
            <i class="fa fa-upload"></i>
          </span>
          <span class="file-label">
            Choose a fileâ€¦
          </span>
        </span>
        <span class="file-name" id="fn">
          ...
        </span>
      </label>
    </div>

    <p>
      <input class="button" type="button" value="Send file (ajax)" id="insertProject">
    </p>
  </form>

  <article class="message">
    <div class="message-header">
      <p>AJAX response</p>
    </div>
    <div class="message-body">
      <div id="ajaxResponse">(...)</div>
    </div>
  </article>

</div>
