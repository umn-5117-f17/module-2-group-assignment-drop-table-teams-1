<div class="project_header container">

  <nav class="level">
  <!-- Left side -->
  <div class="level-left">
    <div class="level-item">
      <p class="subtitle is-30">
        Subject
      </p>
    </div>
    <div class="level-item">
      <a class="button is-Medium is-primary subject-button" href="/subject/{{this.subject}}" id="{{this.subject}}">{{this.subject}}</a>
    </div>

    <div class="level-item">
      <p class="subtitle is-20">
        Tags
      </p>
    </div>
    {{#each this.tags}}
      <div class="level-item">
        <a class="button is-small is-info tag-button" href="/tag/{{this}}" id="{{this}}">{{this}}</a>
      </div>
    {{/each}}
  </div>
  </nav>

</div>

  <div class="widget-wrapper box">
    <aside id="recent-posts-2" class="widget widget_recent_entries">
     <div id="prof-pic-wrap">
       <h1>Author:</h3>
       <h2 id="author-name">{{this.userId}}</h2>
     </div>
  <h3> Project Rating</h3>
  <div class="rating">
<span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
</div>
