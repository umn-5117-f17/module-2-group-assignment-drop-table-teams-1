{{#each recentPosts}}
  <li id="recentPosts">
    <a href='http://localhost:5000/api/project/{{this._id}}'> {{this.title}}</a>
  </li>
{{/each}} -->
  </aside>
</div>



<aside class="widget-tags" id="tags-wrapper">
  <div id="myDIV" class="header">
  {{#if user.nickname}}
  <div class="level-left">
    <div class="level-item">
      <input class="input is-info" type="text" id="tagsInput" placeholder="Add a New Tag">
      <span id="{{this._id}}" class="add-tag-button button is-medium is-info" id="{{this._id}}">Add</span>
    </div>
  </div>
  {{/if}}
</div>
</aside>

<div class="poster-pic box">
  <h1>{{this.title}}</h1>
  <img src="http://localhost:5000/api/picture/{{this._id}}" alt="no pic" height="500" width="500"> </img>
  <h4> Description</h4>
  {{#if user.nickname}}
  <div class="field">
    <div class="control">
      <textarea id="newDesc"class="textarea" placeholder="{{this.description}}"></textarea>
      <span id="{{this._id}}" class="update-description button is-small is-info">Update</span>
    </div>
  </div>
  {{else}}
    <p>{{this.description}}</p>
  {{/if}}
  {{#if user.nickname}}
    <span id="{{this._id}}" class="delete-project button is-medium is-danger">Delete Project</span>
  {{/if}}
</div>
